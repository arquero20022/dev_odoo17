<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="inplast_report_picking_attachments" model="ir.ui.view">
        <field name="name">inplast.report.picking.attachments</field>
        <field name="inherit_id" ref="report_inplast.pnt_report_delivery_document"/>
        <field name="arch" type="xml">
                <xpath expr="//div[@name='outgoing_delivery_address']" position="replace">
                    <div name="outgoing_delivery_address" t-if="o.should_print_delivery_address()">
                                <span><strong>Hola Pedro:</strong></span>
                                <div t-field="o.move_ids[0].partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                            </div>
            </xpath>
             <xpath expr="//div[@name='outgoing_delivery_address']" position="after">
                    <div name="outgoing_delivery_address" t-if="o.should_print_delivery_address()">
                                <span><strong>Hola Pedro:</strong></span>
                                <div t-field="o.move_ids[0].partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                            </div>
                 <!--<img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 45px;" alt="Logo"/>-->
            </xpath>
        </field>
        <field name="priority">99</field>
    </record>


</odoo>