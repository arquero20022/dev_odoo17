<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_inplast_res_company_inh_form" model="ir.ui.view">
        <field name="name">mrp.inplast.res.company.inh.form</field>
        <field name="model">res.company</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="MRP">
                    <group>
                        <group>
                            <field name="pnt_mrp_tool_categ_id"/>
                            <field name="pnt_mrp_blade_categ_id"/>
                            <field name="pnt_mrp_accesory_categ_id"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
