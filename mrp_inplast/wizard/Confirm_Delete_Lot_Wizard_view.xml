<odoo>
    <record id="view_confirm_delete_lot_wizard" model="ir.ui.view">
        <field name="name">confirm.delete.lot.wizard.form</field>
        <field name="model">confirm.delete.lot.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Delete Lot">

                    <p>¿Está seguro de que desea eliminar los lotes: <strong><field name="lot_names"/></strong>?</p>

                <footer>
                    <button string="Confirmar" type="object" name="confirm_delete" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
