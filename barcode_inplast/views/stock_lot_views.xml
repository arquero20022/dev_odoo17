<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_stock_lot_form_inherit" model="ir.ui.view">
            <field name="name">stock.lot.form.inherit.barcode</field>
            <field name="model">stock.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <!-- Insertar campos de código de barras en el formulario de números de serie y lotes -->
                <xpath expr="//group[@name='main_group']" position="after">
                    <group string="Barcode Input">

                        <field name="barcode_input" placeholder="Scan or Enter Barcode(s)"/>
                        <button name="process_barcodes" type="object" string="Process Barcodes" class="oe_highlight"/>
                    </group>
                    <group>
                        <field name="processed_barcodes">
                            <tree string="Processed Barcodes">
                                <field name="barcode"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
